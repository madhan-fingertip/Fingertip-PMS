<odoo>
    <!-- Tree/List View -->
    <record id="view_res_partner_account_status_tree" model="ir.ui.view">
        <field name="name">res.partner.account.status.tree</field>
        <field name="model">res.partner.account.status</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="description"/>
<!--                <field name="active"/>-->
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_res_partner_account_status_form" model="ir.ui.view">
        <field name="name">res.partner.account.status.form</field>
        <field name="model">res.partner.account.status</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
<!--                        <field name="active"/>-->
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_res_partner_account_status" model="ir.actions.act_window">
        <field name="name">Account Status</field>
        <field name="res_model">res.partner.account.status</field>
        <field name="view_mode">list,form</field> <!-- FIXED -->
        <field name="help">Manage the account status for your contacts.</field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_res_partner_account_status"
        action="action_res_partner_account_status"
        name="Account Status"
        sequence="1"
        parent="contacts.res_partner_menu_config"/>
</odoo>
