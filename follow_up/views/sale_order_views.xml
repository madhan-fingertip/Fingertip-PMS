<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_line_hide_qty_fields" model="ir.ui.view">
        <field name="name">sale.order.line.hide.qty.fields</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='order_line']/list//field[@name='product_uom_qty']" position="attributes">
                <attribute name="column_invisible">1</attribute>
            </xpath>

            <xpath expr="//field[@name='order_line']/list//field[@name='qty_delivered']" position="attributes">
                <attribute name="column_invisible">1</attribute>
            </xpath>

            <xpath expr="//field[@name='order_line']/list//field[@name='qty_invoiced']" position="attributes">
                <attribute name="column_invisible">1</attribute>
            </xpath>

            <xpath expr="//field[@name='order_line']/list//field[@name='product_uom']" position="attributes">
                 <attribute name="column_invisible">1</attribute>
            </xpath>

        </field>
    </record>
    <record id="view_order_form_inherit_project_button" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.project.button</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale_project.view_order_form_inherit_sale_project"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_view_project_ids']" position="attributes">
                <attribute name="string">Booking</attribute>
            </xpath>
             <xpath expr="//button[@name='action_view_project_ids']/field[@name='project_count']" position="attributes">
                <attribute name="string">Booking</attribute>
            </xpath>
        </field>
    </record>
</odoo>