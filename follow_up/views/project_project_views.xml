<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Project Form View -->
    <record id="view_project_project_form_inherit" model="ir.ui.view">
        <field name="name">project.project.form.inherit</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="before">
                <header>
                    <button name="action_generate_payment_receipt" 
                            string="Generate Sale Agreement" 
                            type="object" 
                            class="btn-primary"/>
                    <button name="action_generate_allotment_letter" 
                            string="Generate Allotment Letter" 
                            type="object" 
                            class="btn-secondary"/>
                    <button name="action_generate_booking_form" 
                            string="Generate Booking Form" 
                            type="object" 
                            class="btn-secondary"/>
                    <button name="action_generate_cost_sheet" 
                            string="Generate Cost Sheet" 
                            type="object" 
                            class="btn-secondary"/>
                 
                </header>
            </xpath>
            <xpath expr="//div[@name='button_box']/button[@name='action_view_tasks']" position="after">
                <button name="action_view_payments" 
                        type="object" 
                        class="oe_stat_button" 
                        icon="fa-money"
                        invisible="payment_count == 0">
                    <field name="payment_count" widget="statinfo" string="Payments"/>
                </button>
            </xpath>

            <xpath expr="//sheet/group" position="before">
                <group>
                    <group string="Booking Information">
                        <field name="booking_id"/>
                        <field name="booking_date"/>
                        <field name="booking_amount"/>
                        <field name="project_name"/>
                        <field name="project_manager_id"/>
                        <field name="kyc_documents" filename="kyc_documents_filename"/>
                        <field name="kyc_documents_filename" invisible="1"/>
                    </group>
                    
                    <group string="Financial Information">
                        <field name="total_sale_order_value"/>
                        <field name="funding_type"/>
                        <field name="total_demanded_amount"/>
                        <field name="total_paid_amount"/>
                        <field name="pending_amount"/>
                        <field name="fail_date"/>
                    </group>
                </group>

                <group>
                    <group string="Agreement Information">
                        <field name="agreement_date"/>
                        <field name="agreement_status"/>
                    </group>
                    
                    <group string="Registration Information">
                        <field name="registration_number"/>
                        <field name="position_date"/>
                    </group>
                </group>

                <group>
                    <group string="Swapping Information">
                        <field name="swap_status"/>
                        <field name="swap_unit"/>
                        <field name="swapping_reason"/>
                    </group>
                    
                    <group string="Cancellation Information">
                        <field name="cancellation_status"/>
                        <field name="cancellation_amount"/>
                        <field name="cancellation_reason"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>


   

  
</odoo>