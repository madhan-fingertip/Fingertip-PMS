<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Round Robin List View -->
    <record id="view_round_robin_list" model="ir.ui.view">
        <field name="name">round.robin.list</field>
        <field name="model">round.robin</field>
        <field name="arch" type="xml">
            <list string="Round Robin Configurations">
                <field name="project_name"/>
                <field name="active" widget="boolean_toggle"/>
                <field name="member_ids" widget="many2many_tags"/>
            </list>
        </field>
    </record>

    <!-- Round Robin Form View -->
    <record id="view_round_robin_form" model="ir.ui.view">
        <field name="name">round.robin.form</field>
        <field name="model">round.robin</field>
        <field name="arch" type="xml">
            <form string="Round Robin Configuration">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="project_name" placeholder="Project Name" required="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Round Robin Members">
                            <field name="member_ids">
                                <list editable="bottom">
                                    <field name="user_type" required="1"/>
                                    <field name="user_id" required="1"/>
                                    <field name="active" widget="boolean_toggle"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Round Robin Search View -->
    <record id="view_round_robin_search" model="ir.ui.view">
        <field name="name">round.robin.search</field>
        <field name="model">round.robin</field>
        <field name="arch" type="xml">
            <search string="Search Round Robin">
                <field name="project_name"/>
                <filter string="Active" name="active" domain="[('active','=',True)]"/>
                <filter string="Inactive" name="inactive" domain="[('active','=',False)]"/>
            </search>
        </field>
    </record>

    <!-- Round Robin Action -->
    <record id="action_round_robin" model="ir.actions.act_window">
        <field name="name">Round Robin</field>
        <field name="res_model">round.robin</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Round Robin configuration
            </p>
            <p>
                Configure automatic lead assignment by creating a Round Robin
                with team members for Sales, CRM, and Telecaller roles.
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_round_robin_root"
              name="Round Robin"
              parent="crm.crm_menu_config"
              sequence="20"/>
              
    <menuitem id="menu_round_robin"
              name="Round Robin Configuration"
              parent="menu_round_robin_root"
              action="action_round_robin"
              sequence="10"/>
</odoo>