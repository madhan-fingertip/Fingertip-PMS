<odoo>
    <!-- Tree/List View -->
    <record id="features_tree" model="ir.ui.view">
        <field name="name">cus.features.tree</field>
        <field name="model">cus.features</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="description"/>
<!--                <field name="active"/>-->
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_cus_features_form" model="ir.ui.view">
        <field name="name">cus.features.form</field>
        <field name="model">cus.features</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
<!--                        <field name="active"/>-->
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_cus_features_status" model="ir.actions.act_window">
        <field name="name">Features</field>
        <field name="res_model">cus.features</field>
        <field name="view_mode">list,form</field> <!-- FIXED -->
        <field name="help">Manage the features for your opportunities.</field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_cus_features"
        action="action_cus_features_status"
        name="Features"
        sequence="6"
        parent="crm.crm_menu_config"/>


</odoo>
