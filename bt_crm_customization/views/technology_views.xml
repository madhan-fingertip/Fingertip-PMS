<odoo>
    <!-- Tree/List View -->
    <record id="technology_tree" model="ir.ui.view">
        <field name="name">cus.technology.tree</field>
        <field name="model">cus.technology</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="description"/>
<!--                <field name="active"/>-->
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_cus_technology_form" model="ir.ui.view">
        <field name="name">cus.technology.form</field>
        <field name="model">cus.technology</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
<!--                        <field name="active"/>-->
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_cus_technology_status" model="ir.actions.act_window">
        <field name="name">Technology</field>
        <field name="res_model">cus.technology</field>
        <field name="view_mode">list,form</field> <!-- FIXED -->
        <field name="help">Manage the technology for your opportunities.</field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_cus_technology"
        action="action_cus_technology_status"
        name="Technology"
        sequence="7"
        parent="crm.crm_menu_config"/>


</odoo>
