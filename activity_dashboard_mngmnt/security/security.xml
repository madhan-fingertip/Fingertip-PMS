<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="module_category_custom_sales" model="ir.module.category">
        <field name="name">CUSTOM SALES</field>
        <field name="description">Custom Sales Management</field>
        <field name="sequence">15</field>
    </record>

    <record id="group_sales_user_custom" model="res.groups">
        <field name="name">Sales User</field>
        <field name="category_id" ref="module_category_custom_sales"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="comment">Sales users can only see their own records</field>
    </record>

    <record id="group_sales_manager_custom" model="res.groups">
        <field name="name">Sales Manager</field>
        <field name="category_id" ref="module_category_custom_sales"/>
        <field name="implied_ids" eval="[(4, ref('group_sales_user_custom'))]"/>
        <field name="comment">Sales managers can see all records</field>
    </record>

    <record id="crm_lead_rule_sales_user" model="ir.rule">
        <field name="name">Sales User: Own Leads Only</field>
        <field name="model_id" ref="crm.model_crm_lead"/>
        <field name="domain_force">[('user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_sales_user_custom'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>

    <record id="crm_lead_rule_sales_manager" model="ir.rule">
        <field name="name">Sales Manager: All Leads</field>
        <field name="model_id" ref="crm.model_crm_lead"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_sales_manager_custom'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>


    <record id="partner_rule_sales_user" model="ir.rule">
        <field name="name">Sales User: Own Contacts Only</field>
        <field name="model_id" ref="base.model_res_partner"/>
        <field name="domain_force">['|', ('user_id', '=', user.id), ('opportunity_ids.user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_sales_user_custom'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <record id="partner_rule_sales_manager" model="ir.rule">
        <field name="name">Sales Manager: All Contacts</field>
        <field name="model_id" ref="base.model_res_partner"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_sales_manager_custom'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>

</odoo>