<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="view_hr_team_activity_list" model="ir.ui.view">
            <field name="name">hr.team.activity.list</field>
            <field name="model">hr.team.activity</field>
            <field name="arch" type="xml">
                <list>
                 <field name="date"/>
                    <field name="educational"/>
                    <field name="fun_activity"/>
                    <field name="special_announcement"/>
                    <field name="training"/>
                    <field name="award_reward"/>
                </list>
            </field>
        </record>

        <record id="view_hr_team_activity_form" model="ir.ui.view">
            <field name="name">hr.team.activity.form</field>
            <field name="model">hr.team.activity</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group><field name="date"/></group>
                        <group>
                            <field name="educational"/>
                            <field name="fun_activity"/>
                            <field name="special_announcement"/>
                            <field name="training"/>
                            <field name="award_reward"/>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_hr_team_activity_pivot" model="ir.ui.view">
            <field name="name">hr.team.activity.pivot</field>
            <field name="model">hr.team.activity</field>
            <field name="arch" type="xml">
                <pivot>
                    <field name="date" type="row"/>
                    <field name="fun_activity" type="row"/>
                    <field name="special_announcement" type="row"/>
                    <field name="training" type="row"/>
                    <field name="award_reward" type="row"/>
                </pivot>
            </field>
        </record>

        <record id="action_hr_team_activity" model="ir.actions.act_window">
            <field name="name">Team Activity</field>
            <field name="res_model">hr.team.activity</field>
            <field name="view_mode">list,form,pivot</field>
        </record>

        <menuitem id="menu_hr_team_activity"
                  name="Team Activity"
                  parent="Project_Scorecards.menu_hr_scorecard_root"
                  action="action_hr_team_activity"
                  sequence="30"
                  groups="group_scorecard_hr"/>

    </data>
</odoo>
