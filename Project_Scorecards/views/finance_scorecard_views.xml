<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- ================= Finance Scorecard Views ================= -->

        <!-- List View -->
        <record id="view_finance_scorecard_list" model="ir.ui.view">
            <field name="name">finance.scorecard.list</field>
            <field name="model">finance.scorecard</field>
            <field name="arch" type="xml">
                <list string="Finance Scorecards">
                    <field name="date"/>
                    <field name="invoice_raised"/>
                    <field name="raised_amount"
                           widget="monetary"
                           options="{'currency_field': 'currency_id'}"/>
                    <field name="collected_amount"
                           widget="monetary"
                           options="{'currency_field': 'currency_id'}"/>
                </list>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_finance_scorecard_form" model="ir.ui.view">
            <field name="name">finance.scorecard.form</field>
            <field name="model">finance.scorecard</field>
            <field name="arch" type="xml">
                <form string="Finance Scorecard">
                    <sheet>
                        <group>
                            <field name="date"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                        <group>
                            <field name="invoice_raised"/>
                            <field name="raised_amount"
                                   widget="monetary"
                                   options="{'currency_field': 'currency_id'}"/>
                            <field name="collected_amount"
                                   widget="monetary"
                                   options="{'currency_field': 'currency_id'}"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Pivot View -->
        <record id="view_finance_scorecard_pivot" model="ir.ui.view">
            <field name="name">finance.scorecard.pivot</field>
            <field name="model">finance.scorecard</field>
            <field name="arch" type="xml">
                <pivot>
                    <field name="date" type="row"/>
                    <field name="invoice_raised" type="measure"/>
                    <field name="raised_amount" type="measure"/>
                    <field name="collected_amount" type="measure"/>
                </pivot>
            </field>
        </record>

        <!-- Action -->
        <record id="action_finance_scorecard" model="ir.actions.act_window">
            <field name="name">Finance Scorecard</field>
            <field name="res_model">finance.scorecard</field>
            <field name="view_mode">list,form,pivot</field>
        </record>

        <!-- Menu -->
        <menuitem id="menu_finance_scorecard"
                  name="Finance"
                  parent="Project_Scorecards.menu_project_scorecard_root"
                  action="action_finance_scorecard"
                  sequence="50"
                  groups="group_scorecard_finance"
                 />

    </data>
</odoo>
