<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="view_hr_training_list" model="ir.ui.view">
            <field name="name">hr.training.scorecard.list</field>
            <field name="model">hr.training.scorecard</field>
            <field name="arch" type="xml">
                <list>
                 <field name="date"/>
                    <field name="department_id"/>
                    <field name="subject"/>
                </list>
            </field>
        </record>

        <record id="view_hr_training_form" model="ir.ui.view">
            <field name="name">hr.training.scorecard.form</field>
            <field name="model">hr.training.scorecard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group><field name="date" /></group>
                        <group>
                            <field name="department_id"/>
                            <field name="subject"/>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_hr_training_pivot" model="ir.ui.view">
            <field name="name">hr.training.scorecard.pivot</field>
            <field name="model">hr.training.scorecard</field>
            <field name="arch" type="xml">
                <pivot>
                    <field name="department_id" type="row"/>
                    <field name="date" type="row"/>
                </pivot>
            </field>
        </record>

        <record id="action_hr_training_scorecard" model="ir.actions.act_window">
            <field name="name">Training Scorecard</field>
            <field name="res_model">hr.training.scorecard</field>
            <field name="view_mode">list,form,pivot</field>
        </record>

        <menuitem id="menu_hr_training_scorecard"
                  name="Training"
                  parent="Project_Scorecards.menu_hr_scorecard_root"
                  action="action_hr_training_scorecard"
                  sequence="20"
                  groups="group_scorecard_hr"/>

    </data>
</odoo>
