<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>


    <record id="view_hr_policy_list" model="ir.ui.view">
            <field name="name">hr.policy.form</field>
            <field name="model">hr.policy</field>
            <field name="arch" type="xml">
                <list>
                    <field name="date" />
                    <field name="version"/>
                    <field name="policy_details"/>
                       
                </list>
            </field>
        </record>


        <!-- HR Policy Form View -->
        <record id="view_hr_policy_form" model="ir.ui.view">
            <field name="name">hr.policy.form</field>
            <field name="model">hr.policy</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="date" />
                        </group>
                        <group>
                            <field name="version"/>
                            <field name="policy_details"/>
                             <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action -->
        <record id="action_hr_policy" model="ir.actions.act_window">
            <field name="name">Policy</field>
            <field name="res_model">hr.policy</field>
            <field name="view_mode">list,form</field>
        </record>

        <!-- Menu -->
        <menuitem id="menu_hr_policy"
                  name="Policy"
                  parent="Project_Scorecards.menu_hr_scorecard_root"
                  action="action_hr_policy"
                  sequence="40"
                  groups="group_scorecard_hr"/>

    </data>
</odoo>
